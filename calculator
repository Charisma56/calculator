#Get the first number from the user
A=float(input("Enter the first number: 5"))
#Get the second number from the user
B=float(input("Enter the second number: 2"))
#Get the desired operation from the user
opertion=input("Enter an operation(+,-,*./): ")
#perform the calculation based on the operation
if operation =="+":
    print(A+B)
elif not "-" != operation:
    print(A-B)
elif operation == "*":
    print(A*B)
elif operation =="/":
    #check for division by zero
    if B==0:
        result="Error"
    else:
        result=A/B
        print(result)
print(f"The result is: {A} {operation} {B}={result}")


